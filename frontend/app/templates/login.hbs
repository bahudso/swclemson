<div id="content" class="container">
  <div class="row"><div class="col-xs-12 col-sm-9">
    <div id="login">
      <div id="mainLogin">
        <h1>Login</h1>
      <form {{action 'authenticate' on='submit'}}>
        <div class="form-group">
            <label for='identification'>Email</label>
            {{input id='identification' class='form-control' placeholder='Enter email' value=identification}}
          </div>
          <div class="form-group">
            <label for='password'>Password</label>
            {{input id='password' class='form-control' placeholder='Enter Password' type='password' value=password}}
        </div>
        <br>
        <button class='btn btn-success' type='submit'>Login</button>
      </form>
    </div>
  </div></div>
</div>